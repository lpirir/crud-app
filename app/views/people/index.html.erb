<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 display-4">Listado de Personas</h4>
  </div>

    <p>
        <%= link_to 'Crear', new_person_path %>
    </p>

    <% if @people.present? %>
    <div class="row justify-content-center">

        <table class="table table-bordered table-stripe">
            <thead>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>CUI</th>
                <th colspan="2"></th>
            </thead>

            <tbody>
                <% @people.each do |person| %>
                <tr>
                    <td><%= person.nombre %></td>
                    <td><%= person.apellido %></td>
                    <td><%= person.cui %></td>
                    <td><%= link_to 'Editar', edit_person_path(person.id) %></td>
                    <td><%= link_to 'Eliminar',
                            person_path(person.id),
                            method: :delete,
                            data: { confirm: 'Esta seguro de eliminar el registro?' } %>
                </tr>
                <% end %>
            </tbody>
        </table>

    </div>
    <% else %>
    <div class="p-3 mb-2 bg-light text-dark">
        <spcan class="text-info">Bienvenido, agrega tu primer registro</span>
    </div>
    <% end %>
